{% extends 'base.html.twig' %}

{% form_theme orderForm "bootstrap_4_layout.html.twig" %}

{% block body %}

    <div class="col-lg-12">
        <h1>Billetterie du Mus√©e du Louvre</h1>
    </div>

    <div class="col-lg-6">
        <h2>Bienvenue</h2>
    </div>

    <div class="col-lg-6">
        <h2>Liste des tarifs</h2>
    </div>

    <div class="col-lg-6">
        {{ form_start(orderForm) }}
            <label for="">Email</label>{{ form_widget(orderForm.email) }}<br />

            <label for="">Date</label>{{ form_errors(orderForm.dateVisite) }}{{ form_widget(orderForm.dateVisite, {"id":"datepicker"}) }}<br />
            <label for="">Nombre de billets</label>{{ form_widget(orderForm.nbBillets) }}<br />
            <label for="">Type de visite</label>{{ form_widget(orderForm.typeVisite) }}<br />
        <button type="submit" class="btn btn-primary">Enregistrer</button>
        {{ form_end(orderForm) }}
    </div>



{% endblock %}
