{% extends 'base.html.twig' %}

{% form_theme ticketForm "bootstrap_4_layout.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="main-title">
                <h1>Billetterie du Musée du Louvre</h1>
            </div>
        </div>
    </div>

    <h2>Sélection des billets</h2>

    {{ form_start(ticketForm) }}
        <div class="row">
            {% for billet in ticketForm.billets  %}
                <div class="col-lg-4">{{ form_row(billet) }}</div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-success">Valider</button>
    {{ form_end(ticketForm) }}

    <div class="row">
        <div class="col-lg-12 cancel">
            <a href="{{ path("cancel") }}"><button class="btn btn-danger">Annuler</button></a>
        </div>
    </div>

{% endblock %}
