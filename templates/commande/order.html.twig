{% extends 'base.html.twig' %}

{% form_theme orderForm "bootstrap_4_layout.html.twig" %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h2>{{ "Détails de votre visite"|trans }}</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            {{ form_start(orderForm) }}
            {{ form_errors(orderForm) }}
                <label for="">Email</label>
                    {{ form_widget(orderForm.email) }}<br />
                <label for="">{{ "Date de visite"|trans }}</label>
                    {{ form_errors(orderForm.dateVisite) }}
                    {{ form_widget(orderForm.dateVisite, {attr: {class:"datepicker"}}) }}<br />
                <label for="">{{ "Nombre de billets"|trans }}</label>
                    {{ form_widget(orderForm.nbBillets) }}<br />
                <label for="">{{ "Type de visite*"|trans }}</label>
                    {{ form_widget(orderForm.typeVisite) }}<br />
                <p>{{ "*L'accès des billets demi-journée se fait à partir de 14h."|trans }}</p><br />
            <div class="d-flex justify-content-between">
                <div><a href="{{ path("cancel") }}"><button class="btn btn-danger">{{ "Annuler"|trans }}</button></a></div>
                <div><button type="submit" class="btn btn-primary">{{ "Enregistrer"|trans }}</button></div>
            </div>

            {{ form_end(orderForm) }}
        </div>
    </div>



{% endblock %}



{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/datePicker.js') }}"></script>
{% endblock %}
