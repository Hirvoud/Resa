<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <link rel="shortcut icon" href="{{ asset('img/favicon.png') }}">
        <title>{% block title %}{{ "Musée du Louvre – Billetterie"|trans }}{% endblock %}</title>
        <!--<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">-->
        <link rel="stylesheet" href="{{ asset("css/bootstrap.min.css") }}">
        <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset("css/bootstrap-datepicker.css") }}">
        <link rel="stylesheet" href="{{ asset("css/style.css") }}">
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>

    <div class="container">
        <div style="min-height: 100vh;">
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-title">
                        <h1>{{ "Billetterie du Musée du Louvre"|trans }}</h1>
                    </div>
                </div>
            </div>
            {% block body %}

            {% endblock %}
        </div>
        <div class="footer">
            <p>Musée du Louvre ©2018 – <a href="{{ path("mentions") }}">{{ "Mentions légales"|trans }}</a> – <a href="{{ path("contact") }}">Contact</a> –
            <a href="{{ path("cgv") }}">{{ "Conditions générales de vente"|trans }}</a></p>
        </div>
    </div>

        {% block javascripts %}
            <script
                src="https://code.jquery.com/jquery-3.3.1.js"
                integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
                crossorigin="anonymous">
            </script>
            {#<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>#}
            {#<script scr="{{ asset('js/jquery.min.js') }}"></script>#}
            <script scr="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset("js/bootstrap-datepicker.js") }}"></script>
            <script src="https://js.stripe.com/v3/"></script>
        {% endblock %}
    </body>
</html>
